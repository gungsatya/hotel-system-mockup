---
import Sidebar from "@components/Sidebar.astro";
import Topbar from "@components/Topbar.astro";
import { activeUser, hotelInfo, navigation } from "@data/navigation";
import "@styles/global.css";

interface Props {
  title?: string;
}

const { title = "Dashboard" } = Astro.props;
const currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} Â· Rama Shinta Management</title>
  </head>
  <body>
    <div class="flex min-h-screen">
      <Sidebar items={navigation} activeHref={currentPath} />
      <div class="flex flex-1 flex-col">
        <Topbar
          hotelName={hotelInfo.name}
          userName={activeUser.name}
          userRole={activeUser.role}
          userCode={activeUser.code}
        />
        <main class="flex-1 overflow-y-auto bg-slate-100 px-4 py-6 md:px-8">
          <div class="mx-auto flex w-full max-w-6xl flex-col gap-6">
            <slot />
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
