---
interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const { title, description } = Astro.props;
const className = Astro.props.class ?? "";
---
<section class={`rounded-2xl border border-slate-200 bg-white/90 p-6 shadow-sm backdrop-blur ${className}`}>
  {title && (
    <header class="mb-4 space-y-1">
      <h3 class="text-lg font-semibold text-slate-900">{title}</h3>
      {description && <p class="text-sm text-slate-500">{description}</p>}
    </header>
  )}
  <div class={title ? "space-y-4" : ""}>
    <slot />
  </div>
</section>
