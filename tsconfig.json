{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"]
    },
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "isolatedModules": true,
    "types": ["astro/client"],
    "strict": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
